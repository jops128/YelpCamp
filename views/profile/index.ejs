<% include ../partials/header %>

<div class="container">
  <h1>
  <% if(currentUser && currentUser._id.equals(user._id)) { %>
  Your Profile - <% } %><%= user.username %></h1>
  <div class="col-md-4">
    <div style="border:1px solid black;width: 300px; height:300px"></div>
  </div>
  <div class="col-md-8">
      <div class="form-group">
        <h4><strong>Name: </strong>
        <% if(user.name.length === 0) { %>
          No Name Added Yet</h4>
        <% } else { %>
        <%= user.name %></h4>
        <% } %>
      </div>
      <div class="form-group">
        <h4><strong>Email: </strong>
        <% if (user.email.length === 0) { %>
          No Email Added Yet</h4>
        <% } else { %>
          <%= user.email %>
        <% } %>
      </div>
      <div class="form-group">
        <h4><strong>About Me: </strong>
        <% if (user.bio.length === 0) { %>
          No Bio Added Yet</h4>
        <% } else { %>
          <%= user.bio %></h4>
        <% } %>
      </div>
      <% if(currentUser && currentUser._id.equals(user._id)) { %>
        <a href="/profile/<%= currentUser._id %>/edit" class="btn btn-warning btn-lg">Edit</a>
      <% } %>
      <div>
        <h4><strong>Owned Campgrounds: </strong></h4>
        <div class="row text-center">
        <% campground.forEach(function(campground) { %>
        
          <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
              <img src="<%= campground.image %>">
              <div class="caption">
                <h4><%= campground.name %></h4>
              </div>
              <p>
                <a hreF="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
              </p>
            </div>
          </div>
        
        <% }); %>
        </div>
      </div>
  </div>
</div>

<% include ../partials/footer %>