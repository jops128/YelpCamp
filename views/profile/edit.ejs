<% include ../partials/header %>

<div class="container">
  <h1>Edit Your Profile - <%= currentUser.username %></h1>
  <div class="col-md-4">
    <div style="border:1px solid black;width: 300px; height:300px"></div>
  </div>
  <div class="col-md-8">
    <form action="/profile/<%= currentUser._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="info[name]" id="name" placeholder="Your Full name" value="<%= currentUser.name %>">
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" type="email" name="info[email]" id="email" placeholder="Email" value="<%= currentUser.email %>">
      </div>
      <div class="form-group">
        <label for="bio">Something About Yourself</label>
        <textarea class="form-control" name="info[bio]" id="bio" placeholder="Tell us something about you!" rows="7"><%= currentUser.bio %></textarea>
      </div>
      <button class="btn btn-success btn-lg">Update</button>
    </form>
  </div>
</div>

<% include ../partials/footer %>