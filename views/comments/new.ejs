<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 class="text-center">Add new comment to <%= campground.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group"><textarea class="form-control" name="comment[text]" placeholder="Add Comment" rows="7"></textarea></div>
        <div class="form-group"><button class="btn btn-lg btn-primary btn-block">Submit!</button></div>
      </form>
    
      <a href="/campgrounds">Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>